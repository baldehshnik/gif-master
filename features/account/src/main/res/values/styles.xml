<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewWithRoundedBottomCorners" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.GifMaster.CardView.RoundedBottomCorners</item>
    </style>

    <style name="CardViewWithRoundedTopCorners" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.GifMaster.CardView.RoundedTopCorners</item>
    </style>

    <style name="ShapeAppearanceOverlay.GifMaster.CardView.RoundedBottomCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.GifMaster.CardView.RoundedTopCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>