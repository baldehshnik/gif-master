<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageRegisteredAccount"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:tint="@null"
        app:layout_constraintBottom_toTopOf="@id/textAccountUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Gifmaster.ImageView.Circle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textAccountUsername"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="1"
        app:layout_constraintEnd_toEndOf="@id/imageRegisteredAccount"
        app:layout_constraintStart_toStartOf="@id/imageRegisteredAccount"
        app:layout_constraintTop_toBottomOf="@id/imageRegisteredAccount" />

</androidx.constraintlayout.widget.ConstraintLayout>