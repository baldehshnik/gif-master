<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageRegisteredAccount"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textAccountUsername"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="@id/imageRegisteredAccount"
        app:layout_constraintStart_toStartOf="@id/imageRegisteredAccount"
        app:layout_constraintTop_toBottomOf="@id/imageRegisteredAccount"
        tools:text="Account username" />

</androidx.constraintlayout.widget.ConstraintLayout>